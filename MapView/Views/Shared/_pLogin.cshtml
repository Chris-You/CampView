@{

    var controller = Context.Request.RouteValues["Controller"].ToString();

}

            <div class="login">
            @if (User.Identity.IsAuthenticated)
			{
                    
                @if (User.Claims.Any(x => x.Type == "name"))
				{
                    <span style="font-size:12px;">
                    @string.Format("{0}님", User.Claims.FirstOrDefault(x => x.Type == "name").Value)
                    </span>
				}
                <span style="font-size:16px;"><a href="/Account/Logout?path=@controller"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span></a></span>
			}
			else
			{
                <span style="font-size:16px;"><a href="/Account/Login?path=@controller"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span></a></span>
			}

            </div>