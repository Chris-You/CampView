@{
	var controller = Context.Request.RouteValues["Controller"].ToString();

	string layout = "";
	if (controller.ToLower() == "camp")
	{
		layout = "~/Views/Shared/_Layout.cshtml";
		
	}
	else if (controller.ToLower() == "festival")
	{
		layout = "~/Views/Shared/_LayoutFestival.cshtml";
		
	}
	else
	{
		layout = "~/Views/Shared/_LayoutCharger.cshtml";
	}

	Layout = layout;
}
