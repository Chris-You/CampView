@{

    	var path = ViewBag.LoginPath;
	string layout = "";
	if (path.ToLower() == "camp")
	{
		layout = "~/Views/Shared/_Layout.cshtml";
	}
	else
	{
		layout = "~/Views/Shared/_LayoutCharger.cshtml";
	}

	Layout = layout;

}

<script type="text/javascript">


    function reg() {
		
		$.ajax({
			type: "post",
			url: '/Account/RegFaq',
			data: "title="+ $("#title").val() + "&contents="+ $("#contents").val() + "&path=@path",
			success: function (data) {

				if (data != null) {
                    //console.log(data);
					if (data.id != null) {
						location.reload();
						alert('소중한 의견 감사합니다.!');
					}
				}
			},
		});
		

	}

</script>



<div class="page-header">
  <h3>1:1 문의하기</h3>
</div>


<form class="form-horizontal">
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">제목</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="title" placeholder="title">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">내용</label>
    <div class="col-sm-10">
      <textarea class="form-control" rows="3" id="contents" name="contents" ></textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 text-center">
      <button type="button" class="btn btn-primary" onclick="javascript:reg();">등록</button>
    </div>
  </div>

</form>